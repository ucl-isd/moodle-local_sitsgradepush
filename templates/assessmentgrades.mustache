{{!
    @template local_sitsgradepush/assessmentgrades

    Template for displaying the grades for an assessment.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * assessmentname - The assessment name
    * grades - Array variable, array of grades

    Example context (json):
    {"assessmentname":"","grades":[]}
}}
<div class="local_sitsgradepush_assessment_grades">
    <h1>{{#str}} pluginname, local_sitsgradepush {{/str}} - {{assessmentname}}</h1>
    <table class="table table-bordered">
        <tr>
            <th>Student Code</th>
            <th>Student Name</th>
            <th>Marks</th>
            <th>Status</th>
            <th>Last Push Time</th>
        </tr>
        {{#grades}}
            <tr>
                <td>{{idnumber}}</td>
                <td>{{firstname}} {{lastname}}</td>
                <td>{{marks}}</td>
                <td>{{status}}</td>
                <td>{{lastpushtime}}</td>
            </tr>
        {{/grades}}
    </table>
</div>
